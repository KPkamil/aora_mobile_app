{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "module": "esnext",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@*": ["app/*"],
      "@assets": ["assets"],
      "@constants": ["constants"],
      "@components": ["components"]
    },
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types", "src/types/*"],
    "jsx": "react-native",
    "lib": ["es6", "dom", "esnext"],
    "target": "esnext",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true
  },
  "exclude": ["node_modules"]
}
